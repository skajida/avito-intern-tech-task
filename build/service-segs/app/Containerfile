FROM golang:1.20.6-alpine3.18 as builder

WORKDIR /usr/local/src/go/service/segments

# dependencies
COPY go.mod go.sum .
RUN go mod download

# build
COPY . .
RUN go build -a -o bin/service-segs ./cmd/service-segs

# image
FROM alpine:3.18
RUN apk add --no-cache ca-certificates && update-ca-certificates
COPY --from=builder /usr/local/src/go/service/segments/bin/service-segs /usr/local/bin/segments
ENTRYPOINT ["/usr/local/bin/segments"]
