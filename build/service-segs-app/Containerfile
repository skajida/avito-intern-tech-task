FROM golang:alpine3.18 as builder

ENV DIRPATH /go/service/segments
WORKDIR $DIRPATH

# dependencies
COPY go.mod go.sum .
RUN go mod download

# build
COPY . .
# ?
ENV CGO_ENABLED 0
ENV GOOS linux
RUN go build -a -o bin/service-segs $DIRPATH/cmd/service-segs

# image
FROM alpine:3.18.3
RUN apk add --no-cache ca-certificates && update-ca-certificates
COPY --from=builder /go/service/segments/bin/service-segs /usr/local/bin/segments
ENTRYPOINT ["/usr/local/bin/segments"]
